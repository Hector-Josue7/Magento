            <div class="form-row">

              <div class="form-group col-md-6">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name ="nombre" id="nombre" placeholder="Nombre">
                <div class="valid-feedback">Ok</div>
                <div class="invalid-feedback">Primer nombre es requerido</div>
              </div>
              <div class="form-group col-md-6">
                <label for="apellido">Apellido</label>
                <input type="text" class="form-control" name ="apellido" id="apellido" placeholder="Apellido">
                <div class="valid-feedback">Ok</div>
                <div class="invalid-feedback">Apellido es requerido</div>
              </div>
   
     
            </div>
          
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="usuario">Usuario</label>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend">
              <div class="input-group-text">@</div>
            </div>
            <input type="text" class="form-control" name="usuario" id="usuario" placeholder="Usuario">
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">El nombre de usuario es requerido</div>
          </div>
        </div>
     
        <div class=" form-group col-md-6">
            <label for="correo">Correo</label>
          <input onkeyup="validarCorreo(this)" id="correo" name="correo" class="form-control" type="text" placeholder="hector@magento.com">
          <div class="valid-feedback">Ok</div>
          <div class="invalid-feedback">Correo invalido</div>
      </div>
      </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="clave">Contraseña</label>
            <input type="password" name="clave" id="clave" class="form-control " placeholder="Contraseña" aria-describedby="passwordHelpInline">
            <!-- <small id="passwordHelpInline"  style="color: white">
                Debe tener entre 8 y 20 caracteres.
            </small> -->
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Password is required</div>
          </div>
     
          <div class="form-group col-md-6">
              <label for="foto">Elija su foto</label>
              <input type="file" class="form-control-file" id="foto-perfil">
            </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            Genero<br>
            <label><input name="gender" type="radio" value="F">Femenino</label>
            <label><input name="gender" type="radio" value="M">Masculino</label>
         
        </div>

 
        Cumpleaños

       <div class="col-lg-2 col-12">
            <select id="day" name="day" class="form-control"><option value="">Día</option></select>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Day is required</div>
        </div>
        <div class="col-lg-2 col-12">
            <select id="month" name="month" class="form-control"><option value="">Mes</option></select>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Month is required</div>
        </div>
        <div class="col-lg-2 col-12">
            <select id="year" name="year" class="form-control"><option value="">Año</option></select>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Year is required</div>
        </div>
   

        <div class="form-row">
            <label for="tipoUsuario">Elija un tipo de usuario </label>
          <div class="col-lg-6">
              <select class="form-control" name="tipoUsuario" id="tipoUsuario">
               
                  <option value="" selected diabled>Elijalo de aqui</option>
                <div class="valid-feedback">Ok</div>
                  <div class="invalid-feedback">Year is required</div>
                 
                 
                </select>
                <div class="valid-feedback">Ok</div>
                <div class="invalid-feedback">Year is required</div>
          </div>
        
        
        </div>
</div>
<button style="margin-top:70px" onclick="registrarUsuario()" name="boton-registro" id="boton-registro" type="button" class="btn btn-primary btn-block">Vamos</button><br>
    <p class="form-link">¿Ya tienes una cuenta? <a href="/login">Ingresa aquí</a></p>
  
  </div>
</div>

